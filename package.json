{
    "name": "halo-forge",
    "description": "An aggregation of news, resources, tools, etc. for the Halo Forge community.",
    "version": "0.0.1",
    "homepage": "https://github.com/RayBenefield/halo-forge",
    "author": {
        "name": "Raymond Benefield",
        "email": "raymond.benefield@wellsfargo.com"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/RayBenefield/halo-forge.git"
    },
    "bugs": {
        "url": "https://github.com/RayBenefield/halo-forge/issues"
    },
    "license": "MIT",
    "main": "src/index.js",
    "engines": {
        "node": ">= 0.10.26",
        "npm": ">=1.4.3"
    },
    "scripts": {
        "dev": "rimraf build/ && mkdir -p build/ && cp src/index.html build/index.html && concurrently \"lite-server -c .lite-server.json\" \"watchify src/index.js -o build/bundle.js -t [ babelify â€” presets [ es2015 stage-0] ]\"",
        "test": "jest --watch",
        "lint": "eslint -c .eslintrc src/",
        "build": "babel src -d dist",
        "clean": "rimraf dist",
        "patch": "npm version patch -m 'v%s' && js-beautify -r package.json && git commit -a --amend --no-edit",
        "minor": "npm version minor -m 'v%s' && js-beautify -r package.json && git commit -a --amend --no-edit",
        "major": "npm version major -m 'v%s' && js-beautify -r package.json && git commit -a --amend --no-edit"
    },
    "dependencies": {
        "@cycle/dom": "^14.3.0",
        "@cycle/xstream-run": "^4.2.0",
        "babelify": "^7.3.0",
        "browserify": "^14.1.0",
        "concurrently": "^3.3.0",
        "config": "^1.21.0",
        "cross-env": "^3.1.3",
        "free-style": "^2.3.0",
        "lite-server": "^2.2.2",
        "lodash": "^4.17.4",
        "time-ago": "^0.1.0",
        "watchify": "^3.9.0",
        "xstream": "^10.2.0"
    },
    "devDependencies": {
        "babel-cli": "^6.18.0",
        "babel-jest": "^17.0.2",
        "babel-polyfill": "^6.16.0",
        "babel-preset-es2015": "^6.18.0",
        "eslint": "^3.2.2",
        "eslint-config-airbnb": "^12.0.0",
        "eslint-plugin-import": "^1.16.0",
        "eslint-plugin-jsx-a11y": "^2.2.3",
        "eslint-plugin-react": "^6.3.0",
        "gulp": "^3.9.1",
        "gulp-cached": "^1.1.0",
        "gulp-debug": "^2.1.2",
        "gulp-if": "^2.0.1",
        "gulp-notify": "^2.2.0",
        "gulp-plumber": "^1.1.0",
        "gulp-shell": "^0.5.2",
        "jest": "^17.0.3",
        "js-beautify": "^1.6.4",
        "rimraf": "^2.5.4"
    },
    "babel": {
        "presets": [
            "es2015"
        ]
    },
    "jest": {
        "notify": true,
        "rootDir": "src",
        "testEnvironment": "node"
    }
}
